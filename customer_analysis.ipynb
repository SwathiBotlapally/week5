# ===============================
# CUSTOMER SALES ANALYSIS - SINGLE CELL
# ===============================

import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
import os

# Create folders if not exist
os.makedirs("visualizations", exist_ok=True)

# Load datasets
sales = pd.read_csv("data/sales_data.csv")
customers = pd.read_csv("data/customer_data.csv")

# Data cleaning & preparation
sales["OrderDate"] = pd.to_datetime(sales["OrderDate"])
customers["SignupDate"] = pd.to_datetime(customers["SignupDate"])

sales["Revenue"] = sales["Quantity"] * sales["Price"]

# Merge datasets
merged_data = pd.merge(sales, customers, on="CustomerID", how="inner")

# ===============================
# KEY METRICS
# ===============================
total_revenue = merged_data["Revenue"].sum()
total_customers = merged_data["CustomerID"].nunique()
avg_order_value = merged_data["Revenue"].mean()

print("Total Revenue:", total_revenue)
print("Total Customers:", total_customers)
print("Average Order Value:", round(avg_order_value, 2))

# ===============================
# CUSTOMER ANALYSIS
# ===============================
top_customers = merged_data.groupby("CustomerName")["Revenue"].sum().sort_values(ascending=False)
print("\nTop Customers:\n", top_customers)

region_sales = merged_data.groupby("Region")["Revenue"].sum()
print("\nRevenue by Region:\n", region_sales)

# ===============================
# SALES PATTERN ANALYSIS
# ===============================
merged_data["Month"] = merged_data["OrderDate"].dt.month
monthly_sales = merged_data.groupby("Month")["Revenue"].sum()
print("\nMonthly Sales:\n", monthly_sales)

# ===============================
# PIVOT TABLE
# ===============================
pivot_table = pd.pivot_table(
    merged_data,
    values="Revenue",
    index="Region",
    columns="Product",
    aggfunc="sum"
)

print("\nPivot Table:\n", pivot_table)

# ===============================
# VISUALIZATIONS
# ===============================

# Revenue by Region
region_sales.plot(kind="bar", title="Revenue by Region")
plt.ylabel("Revenue")
plt.savefig("visualizations/revenue_by_region.png")
plt.show()

# Monthly Sales Trend
monthly_sales.plot(kind="line", marker="o", title="Monthly Sales Trend")
plt.ylabel("Revenue")
plt.savefig("visualizations/monthly_sales_trend.png")
plt.show()

# Top Customers
top_customers.plot(kind="bar", title="Top Customers by Revenue")
plt.ylabel("Revenue")
plt.savefig("visualizations/top_customers.png")
plt.show()

# Product Performance
product_sales = merged_data.groupby("Product")["Revenue"].sum()
product_sales.plot(kind="pie", autopct="%1.1f%%", title="Product Revenue Share")
plt.savefig("visualizations/product_performance.png")
plt.show()

print("\nAnalysis Completed Successfully!")
